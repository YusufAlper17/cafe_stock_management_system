{
  "name": "bakery-cafe-stock",
  "version": "1.0.0",
  "description": "A multi-branch bakery-café stock and sales management system",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.js\" && ( [ -d public/js ] && eslint \"public/js/**/*.js\" || echo 'public/js yok, atlanıyor' )",
    "lint:fix": "eslint \"src/**/*.js\" \"public/js/**/*.js\" --fix",
    "format": "prettier --write src/ && ( [ -d public/js ] && prettier --write \"public/js/**/*.js\" || echo 'public/js yok, atlanıyor' )",
    "format:check": "prettier --check src/ && ( [ -d public/js ] && prettier --check \"public/js/**/*.js\" || echo 'public/js yok, atlanıyor' )",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "keywords": [
    "bakery",
    "cafe",
    "stock",
    "management"
  ],
  "author": "Arzen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/arzen.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/arzen/issues"
  },
  "homepage": "https://github.com/yourusername/arzen#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.8",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "i18next": "^25.6.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "chai": "^5.1.2",
    "chart.js": "^4.5.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jsdom": "^25.0.1",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
